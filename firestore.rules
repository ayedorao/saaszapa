rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'crisdoraodxb@gmail.com';
    }

    match /profiles/{profileId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();

      function hasActiveProfile() {
        return exists(/databases/$(database)/documents/profiles/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.active == true;
      }
    }

    match /roles/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /user_roles/{userRoleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    match /product_variants/{variantId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    match /inventory/{inventoryId} {
